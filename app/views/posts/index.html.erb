<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<%= link_to 'Logout', '/sign_out'%>
<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr style='color:red;'>
        <td><%= post.body %></td>
        <td><%= post.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

